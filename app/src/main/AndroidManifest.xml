<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="com.raspi.chatapp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:name=".util.Globals"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <receiver android:name=".ui.chatting.ChatActivity$BootReceiver">
            <intent-filter>
                <action android:name="ANDROID.INTENT.ACTION.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>
        <receiver android:name=".util.ConnChangeReceiver">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE"/>
                <action android:name="android.net.wifi.WIFI_STATE_CHANGED"/>
            </intent-filter>
        </receiver>
        <receiver android:name=".util.service.MessageService$RaiseMessageNotification">
            <intent-filter>
                <action
                    android:name="com.raspi.chatapp.ui.chatting.ChatActivity.RECEIVE_MESSAGE"/>
            </intent-filter>
        </receiver>

        <activity
            android:name=".ui.chatting.ChatActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".ui.password.PasswordActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateAlwaysVisible">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.settings.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".ui.chatting.ChatActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.chatting.ChatActivity"/>
        </activity>
        <activity
            android:name=".ui.settings.ChangePasswordActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name=".ui.settings.ChangePasswordActivity"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.AddChatActivity"
            android:label="@string/title_activity_add_chat"
            android:parentActivityName=".ui.chatting.ChatActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.chatting.ChatActivity"/>
        </activity>
        <activity
            android:name=".util.sqlite.AndroidDatabaseManager"
            android:theme="@style/Theme.AppCompat.Light">
        </activity>


        <service android:name=".util.service.MessageService">
        </service>
    </application>

</manifest>
