<RelativeLayout
    android:id="@+id/send_image_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.raspi.chatapp.ui.chatting.SendImageFragment"
    android:background="@android:color/black">

    <ImageView
        android:id="@+id/send_image_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/send_image_description"
        android:scaleType="fitCenter"/>

    <EditText
        android:id="@+id/send_image_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/send_image_buttons"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="5dp"
        android:inputType="textCapSentences|textAutoCorrect|textLongMessage"
        android:maxLines="3"
        android:minLines="1"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"/>

    <LinearLayout
        android:id="@+id/send_image_buttons"
        style="?android:buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary">

        <Button
            android:id="@+id/send_image_cancel"
            style="?android:buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/cancel"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/send_image_send"
            style="?android:buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/send"
            android:textColor="@android:color/white"/>
    </LinearLayout>

</RelativeLayout>
